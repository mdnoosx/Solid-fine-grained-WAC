# ACL resource for the public folder
@prefix acl: <http://www.w3.org/ns/auth/acl#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix test: <https://raw.githubusercontent.com/mdnoosx/refinedACL/main/refinedacl#>.

# The owner has all permissions
<#owner>
    a acl:Authorization;
    acl:agent <https://alice.localhost:8443/profile/card#me>;
    acl:accessTo <./>;
    acl:default <./>;
    acl:mode acl:Read, acl:Write, acl:Control.

:pol1 a acl:Authorization;
    test:appliesTo <./>;
    acl:mode acl:Write;
    test:stopInheritance <./>;
    test:inherit <./>;
    acl:agentClass foaf:Agent;
    test:hasAccessQuery """
    PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
    PREFIX o: <http://www.w3.org/ns/oa#>
    PREFIX rd: <http://www.w3.org/2000/01/rdf-schema#>
    PREFIX terms: <http://purl.org/dc/terms/>
    PREFIX ex: <http://example.com/>
    CONSTRUCT {
     ?ann
         a o:Annotation;
         o:motivatedBy ?mot;
         terms:created ?date;
         ex:isHidden ?hidden.
     }
    WHERE {
    ?ann
         a o:Annotation;
         o:motivatedBy ?mot;
         terms:created ?date;
         ex:isHidden ?hidden.
     }
    """.

:pol2 a acl:Authorization;
    test:appliesTo <./>;
    acl:mode acl:Write;
    test:inherit <./>;
    acl:agentClass foaf:Agent;
    test:hasAccessQuery """
    PREFIX o: <http://www.w3.org/ns/oa#>
    PREFIX terms: <http://purl.org/dc/terms/>
    PREFIX ex: <http://example.com/>
    CONSTRUCT {
     ?ann
         a o:Annotation;
         o:hasBody ?comment;
         terms:creator ?creator;
         ex:priority ?prior.
     }
    WHERE {
    ?ann
         a o:Annotation;
         o:hasBody ?comment;
         terms:creator ?creator;
         ex:priority ?prior.
     }
    """.

:pol3 a acl:Authorization;
    test:appliesTo <./>;
    acl:mode acl:Write;
    test:inherit <./>;
    acl:agentClass foaf:Agent;
    test:hasAccessQuery """
    PREFIX o: <http://www.w3.org/ns/oa#>
    PREFIX rd: <http://www.w3.org/2000/01/rdf-schema#>
    CONSTRUCT {
     ?ann
         a o:Annotation;
         o:hasTarget ?target;
         rd:label ?label.
     }
    WHERE {
    ?ann
         a o:Annotation;
         o:hasTarget ?target;
         rd:label ?label.
     }
    """.
